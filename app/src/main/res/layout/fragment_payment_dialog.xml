<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     app:cardBackgroundColor="#FFFFFF"
    android:animateLayoutChanges="true"
    app:cardElevation="@dimen/_8sdp"
    tools:context=".admin.AddUserFragment">

        <ImageButton
            android:id="@+id/ib_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
              android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_clear_black_24dp"/>




        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:paddingStart="@dimen/_15sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
             xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".admin.AddUserFragment">

                <!-- TODO: Update blank fragment layout -->

                <TextView
                    android:id="@+id/lbl_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ib_dismiss"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:fontFamily="@font/coresansar"
                     android:text="Payment Detail"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_17ssp" />



                <TextView
                    android:id="@+id/lbl_customer_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Id : "
                    android:fontFamily="@font/coresansar"
                    android:layout_below="@id/lbl_payment"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_customer_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_marginEnd="@dimen/_15sdp"
                    android:text="AIR9373"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_alignStart="@id/tv_amount"
                     android:layout_alignTop="@id/lbl_customer_id"
                    android:textSize="@dimen/_14ssp"/>

                <TextView
                    android:id="@+id/lbl_customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Phone : "
                    android:fontFamily="@font/coresansar"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:layout_below="@id/lbl_customer_id"
                    android:layout_marginTop="@dimen/_12sdp"
                     />

                <TextView
                    android:id="@+id/tv_customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:fontFamily="@font/roboto_regular"
                    android:layout_alignStart="@id/tv_amount"
                    android:text="883233845"
                    android:layout_alignTop="@id/lbl_customer_phone"
                    android:layout_toRightOf="@id/lbl_customer_phone"
                     android:layout_below="@id/tv_customer_id"
                     android:textSize="@dimen/_14ssp"/>

                <TextView
                    android:id="@+id/lbl_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount : "
                    android:fontFamily="@font/coresansar"
                    android:layout_below="@id/tv_customer_phone"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/lbl_customer_id"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="INR 434"
                    android:layout_alignTop="@id/lbl_amount"
                    android:textSize="@dimen/_14ssp"/>



                <TextView
                    android:id="@+id/txn_id_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction ID : "
                    android:fontFamily="@font/coresansar"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_below="@id/tv_amount"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/txn_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_alignTop="@id/txn_id_lbl"
                    android:layout_alignStart="@id/tv_customer_phone"
                    android:text="3KNS433434"
                    android:layout_below="@id/last_bill_amount_lbl"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:id="@+id/last_bill_date_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : "
                    android:fontFamily="@font/coresansar"

                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_below="@id/txn_id_lbl"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_alignStart="@id/txn_id"
                    android:layout_alignTop="@id/last_bill_date_lbl"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txn_id"
                    android:textSize="@dimen/_12ssp"/>




        </RelativeLayout>
</androidx.cardview.widget.CardView>